<h1>Create Movie</h1>

<%= form_for @movie do |f| %>
	<p>
		<%= f.label :title, "Movie Title" %><br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description, "Description" %><br/>
		<%= f.text_area :description, cols: 40, rows: 7 %>
	</p>
	<p>
		<%= f.label :rating, "Rating" %><br/>
		<%= f.text_field :rating, size: 5 %>
	</p>
	<p>
		<%= f.label :released_on, "Release Date" %><br/>
		<%= f.date_field :released_on %>
	</p>
	<p>
		<%= f.label :total_gross, "Total Gross" %><br/>
		<%= f.number_field :total_gross%>
	</p>
	<%= f.submit %>
<% end %>