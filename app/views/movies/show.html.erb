<article>
	<header><h1><%= @movie.title %></h1></header>
	<p><%= @movie.description %></p>
	
	<h3>Rating</h3>
	<p><%= @movie.rating %></p>
	
	<h3>Total Gross</h3>
	<p><%= format_total_gross(@movie) %></p>
	
	<h3>Released On</h3>
	<p><%= @movie.released_on.to_s %></p>
	
	<h3>Cast</h3>
	<p><%= @movie.cast.to_s %></p>
	
	<h3>Director</h3>
	<p><%= @movie.director.to_s %></p>
	
	<h3>Duration</h3>
	<p><%= @movie.duration.to_s %></p>
	
	<h3>Poster</h3>
	<p><%= image_for(@movie) %></p>
	
	<%= link_to "All Movies", root_path %> | <%= link_to "Edit", edit_movie_path %> | <%= link_to "Delete", movie_path, method: :delete, data: {confirm: 'Are you sure?' }%>
</article>