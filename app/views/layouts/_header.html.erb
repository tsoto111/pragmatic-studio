<header id="page-header">
	<div id="masthead">
		<h1 style="display:flex;">
			<%= link_to 'Events', root_path, style: "display:inline-block; width:241px;" %>
			<!-- Heroku ENV Notice -->
			<% if production? %>
				| <span style="margin-left:20px; font-size:18px;">Heroku Staging</span>
			<% end %>
		</h1>
		
		<nav>
			<p>
				<% if current_user %>
					<%= link_to current_user.name, current_user %>
				<% else %>
					<%= link_to "Sign Up", signup_path, class: "button" %>
					<%= link_to "Sign In", new_session_path, class: "button" %>
				<% end %>
			</p>
		</nav>
	</div>
</header>
